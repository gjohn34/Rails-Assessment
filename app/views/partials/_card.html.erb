<div class="col s12 m6 l4">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div class="card-profile">
        <span class="card-title"><%= profile.name %></span>
        <%= image_tag profile.avatar_small, :class => 'circle show' %>
      </div>
      <p>
        <% if profile.bio.empty? %>
          I am <%= profile.name %>
        <% else %>
          <%= profile.bio.truncate(42) %>
        <% end %>
      </p>
    </div>
    <div class="card-action">
      <%= link_to "#{profile.name.capitalize}'s Profile", profile %>
      <% if user_signed_in? && current_user.profile != nil %>
        <div class="divider"></div>
        <%= link_to "Message #{profile.name.capitalize}", new_profile_message_path(profile, :id => profile.id) %>
      <% end %>
    </div>
  </div>
</div>
