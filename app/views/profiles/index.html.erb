<%= provide(:active, "container") %>
<div class="row">
  <%= form_tag search_index_path, method: :get do %>
    <%= text_field_tag :search %>
    <%= submit_tag "Search", name: nil %>
  <% end %>
</div>
<div class='row'>
  <% @profiles.each do |profile| %>
  <div class="col s12 m6 l4">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="card-profile">
          <span class="card-title"><%= profile.name %></span>
          <%= image_tag profile.avatar_small, :class => 'circle show' %>
        </div>
        <p><%= profile.bio %></p>
      </div>
      <div class="card-action">
        <%= link_to "#{profile.name.capitalize}'s Profile", profile %> |  <%= link_to "Message", new_profile_message_path(profile, :id => profile.id) %>
      </div>
    </div>
  </div>
  <% end %>
</div>
