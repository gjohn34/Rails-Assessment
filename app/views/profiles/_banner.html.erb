<div id='profile-banner' class='nav-wrapper blue'>
  <div class='profile-pic container'>
    <div class="row">
      <div class="col s12 m12">
        <% if @profile.pic.attached? %>
          <div style="width:150px; height:auto;">
            <%= image_tag @profile.avatar, :class => 'circle' %>
          </div>
        <% end %>
      </div>
      <div class="col s12 m12 like">
        <% if user_signed_in? %>
          <% if current_user.id != @profile.id %>
            <% if current_user.profile != nil %>
              <% if !current_user.profile.likes.any? {|p| p.profile_id == @profile.id} %>
                <%= form_for @profile, url: {action: "update_likes", controller: "profiles", params: {:id => @profile.id}}, :method => :POST do |f| %>
                  <%= f.submit "I Like This" %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
